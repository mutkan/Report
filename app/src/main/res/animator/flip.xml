<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:ordering="sequentially">

    <objectAnimator
            android:duration="800"
            android:propertyName="rotationY"
            android:valueFrom="0"
            android:valueTo="180"
            android:interpolator="@android:anim/linear_interpolator">
    </objectAnimator>

    <objectAnimator
            android:duration="800"
            android:propertyName="rotationY"
            android:valueFrom="180"
            android:valueTo="360"
            android:interpolator="@android:anim/linear_interpolator">
    </objectAnimator>

    <objectAnimator
            android:duration="800"
            android:propertyName="rotationY"
            android:valueFrom="-360"
            android:valueTo="-180"
            android:interpolator="@android:anim/linear_interpolator">
    </objectAnimator>

    <objectAnimator
            android:duration="800"
            android:propertyName="rotationY"
            android:valueFrom="-180"
            android:valueTo="-0"
            android:interpolator="@android:anim/linear_interpolator">
    </objectAnimator>

    <objectAnimator
            android:duration="800"
            android:propertyName="rotationY"
            android:valueFrom="-0"
            android:valueTo="0"
            android:interpolator="@android:anim/linear_interpolator">
    </objectAnimator>

</set>